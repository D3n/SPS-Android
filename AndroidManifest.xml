        <activity
            android:name="com.supprojectstarter.activities.CreateProjectActivity"
            android:label="@string/title_activity_create_project" >
        </activity>
        <activity
            android:name="com.supprojectstarter.activities.CategoryDetailActivity"
            android:label="@string/title_activity_category_detail" >
        </activity>
    </application>

</manifest>
