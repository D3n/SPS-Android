                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.supprojectstarter.activities.HomeActivity"
            android:label="@string/title_activity_home" >
