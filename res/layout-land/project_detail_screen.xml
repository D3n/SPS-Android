<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".ProjectDetailActivity" >

	<RelativeLayout 
		android:id="@+id/detail_rl"
	   	android:layout_width="match_parent"
	   	android:layout_height="wrap_content"
	   	android:padding="5dp"
	   	android:background="#DDFFFFFF" >
   	
	    <TextView
	        android:id="@+id/detail_name_tv"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="8dp"
	        android:gravity="center"
	        android:textSize="26sp"
	        android:textStyle="bold" />
	    
	    <TextView 
	        android:id="@+id/detail_amount_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@id/detail_name_tv"
	        android:layout_marginBottom="8dp"
	        android:textSize="20sp"
	        android:textStyle="bold" />
	    
	    <TextView 
	        android:id="@+id/detail_percentage_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@id/detail_name_tv"
	        android:layout_marginBottom="8dp"
	        android:textSize="20sp"
	        android:textStyle="bold" />		    
	    
	    <TextView
	        android:id="@+id/detail_creator_title_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/detail_amount_tv"
	        android:text="@string/detail_creator_title"
	        android:textSize="16sp" />
	    
	    <TextView
	        android:id="@+id/detail_creator_tv"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/detail_creator_title_tv"
	        android:layout_below="@id/detail_percentage_tv"
	        android:layout_marginLeft="5dp"
	        android:textSize="16sp" />
	    
	    <TextView 
	        android:id="@+id/detail_sdate_title_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/detail_creator_title_tv"
	        android:text="@string/detail_sdate_title"
	        android:textSize="16sp" />
	    
	    <TextView 
	        android:id="@+id/detail_sdate_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/detail_sdate_title_tv"
	        android:layout_below="@id/detail_creator_tv"
	        android:layout_marginLeft="5dp"
	        android:textSize="16sp" />
	    
	    <TextView 
	        android:id="@+id/detail_edate_title_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/detail_sdate_title_tv"
	        android:text="@string/detail_edate_title"
	        android:textSize="16sp" />
	    
	    <TextView 
	        android:id="@+id/detail_edate_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/detail_edate_title_tv"
	        android:layout_below="@id/detail_sdate_tv"
	        android:layout_marginLeft="5dp"
	        android:textSize="16sp" />
	    
	    <TextView 
	        android:id="@+id/detail_description_tv"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/detail_edate_tv"
	        android:layout_marginTop="10dp"
	        android:textSize="16sp" />
	    
	    <LinearLayout 
	        android:id="@+id/contribute_ll"
	        android:orientation="vertical"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/detail_description_tv"
	        android:layout_marginTop="10dp"
	        android:paddingBottom="20dp"
	        android:visibility="visible" >

	        <EditText
	            android:id="@+id/contribute_et"
	            android:layout_width="200dp"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:gravity="right"
	            android:hint="@string/contribute_hint"
	            android:inputType="number" />
	        
	        <Button 
	            android:id="@+id/contribute_b"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:textColor="#1B77B2"
	            android:text="@string/contribute_button" />
	        
	    </LinearLayout>	    
	    
	</RelativeLayout>

</ScrollView>
